<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional //EN">
<html>
  <head>
    <title> FloraRails: Sua Floricultura na Web </title>
      <%= stylesheet_link_tag 'florarails',
      :media => 'all' %>
      <%= javascript_include_tag :defaults %>
  </head>

  <body id= "catalogo">
    <div id= "conteudo">
      <div id= "cabecalho">
        <%= image_tag("logo.jpg", 
                      :alt => "Logo da floricultura FloraRails") %>
                       FloraRails: Sua Floricultura na Web
      </div>
      <div id = "menu">
      
        <div id = "procurar">

          <tr>
          
            <td>
              <label for="busca">
                <font size = "1">
                  <b>Busca de produtos:</b>
                </font>
              </label>
            </td>
            
            <td>
              <%= text_field_tag :busca %>
            </td>
            <td>
              <img alt="aguarde" id="aguarde" src="images/aguarde.gif" style="display:none;" />
            </td>
            
          </tr>
          
          <!--%= form_for @catalogo do |f|
            f.autocomplete_field :produto_titulo, autocomplete_produto_titulo_produtos_path
          end  %-->
              <%= submit_tag 'OK'%>
            
        </div>
        
        <li> 
          <a href="#a"> Inicio </a> 
        </li>
         <li> 
          <a href="#b"> Login </a> 
        </li>
         <li> 
          <a href="#c"> Logout </a> 
        </li>
         <li> 
          <a href="#d"> Contato </a> 
        </li>
      </div>
      <p>
        <div id = "corpo">
          <div id = "lateral">
            <ul>
              <li> Categorias
              <% for grupo in Grupo.find(:all) %>
                <li>
                  <%= link_to grupo.descricao,
                          {:controller => "catalogo",
                           :action => "lista_itens_grupo",
                           :grupo => grupo.id} %>
                </li>
              <% end %>
            </ul>
          </div>
          <div id = "direita">
            <div id = "principal">
              <%= mensagem %>
              <%= yield %>
            </div>
          <div id = "lado">
          Promoção
            </div>
          </div>
        </div>
      <div id = "rodape">
        @ 2009 FloraRails - Todos os direitos reservados
      </div>
    </div>
  </body>
</html>  
          
